{
  "compilerOptions": {
    "target": "ES2021",
    "module": "node16",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "noEmit": false,
    "declaration": true
  },
  "include": ["**/*.ts"]
}